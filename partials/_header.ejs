<header>
    <nav class="navbar navbar-expand-md navbar-dark bg-success">
        <a class="navbar-brand" href="/urls">TinyApp</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav" style="flex: 1">
                <a class="nav-item nav-link" href="/urls">My URLs</a>
                <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
            </div>

            <% if(!user_id || !users[user_id]){%>
                <div class="btn-group" role="group">
                    <form method="GET" action="/login">
                        <button class="btn btn-outline-dark">Login</button>&nbsp;
                    </form>
                    <form method="GET" action="/register">
                        <button class="btn btn-outline-dark">Register</button>
                    </form>
                </div>
                <%}else{%>
                    <form class="form-inline my-2 my-lg-0" method="POST" action="/logout">
                        <span class="form-inline">Logged In As:&nbsp;<%= users[user_id]["email"] %>&nbsp;User!&nbsp;</span>
                        <button class="btn btn-outline-dark " type="submit">Logout</button>
                    </form>
                    <%}%>

        </div>
    </nav>
</header>